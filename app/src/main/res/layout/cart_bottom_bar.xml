<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:layout_marginTop="10dp"
              android:background="@color/list_item_background_normal"
              android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/main_wallet_layout"
        android:layout_width="fill_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtgoodscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_size_14"
            android:text="@string/goods_count"
            android:textColor="@color/main_black"
            android:layout_weight="4"
             />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="合计："
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/main_black"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/center_mark_money"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/red"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cart_totalcount_layout"
        android:layout_width="fill_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|center_vertical"
        >


        <TextView
            android:id="@+id/txtcomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0.00"
            android:textSize="@dimen/text_size_23"
            android:textColor="@color/red"
            android:layout_weight="1"


             />

    </LinearLayout>




    <RelativeLayout
        android:id="@+id/cart_pay_layout"
        android:layout_width="fill_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        >

        <Button
            android:id="@+id/btnpayorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_18"

            android:background="@drawable/btn_bg_for_red_selector"

            android:text="@string/main_pay"
            android:textColor="@color/white" />

     <!--   <TextView
            android:id="@+id/btnpayorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"

            android:background="@drawable/btn_bg_for_red_selector"

            android:text="@string/main_pay"
            android:textColor="@color/white" />-->



    </RelativeLayout>
    </LinearLayout>