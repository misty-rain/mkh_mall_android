<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar_root"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="48dp" >

    <LinearLayout
        android:id="@+id/ll_fctitlebar_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_grey_sel"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@mipmap/ico_backarrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_fctitlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_title"
        android:layout_centerInParent="true"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/ib_fctitlebar_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:padding="8dp"

        android:visibility="gone" />
    
    <CheckBox
        android:id="@+id/ib_fctitlebar_switch"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:padding="8dp"
        android:button="@drawable/switch_cbx"
        android:checked="true"/>
    
    <TextView
        android:id="@+id/tv_fctitlebar_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/color_txt_grey"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/common_grey_sel"
        android:padding="8dp"
        android:textSize="16sp"
        android:visibility="gone"  />


</RelativeLayout>