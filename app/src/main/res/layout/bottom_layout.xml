<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/main_wallet_layout"
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:paddingLeft="10dp" >
        <ImageView
            android:id="@+id/iconwallet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/icon_wallet"/>


        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/txtwalletprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/default_money_number"
            android:paddingLeft="30dp"
            android:paddingTop="6dp"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"

        android:background="@color/transparent_cover" />
    <RelativeLayout
        android:id="@+id/main_cart_layout"
        android:layout_width="0dp"
        android:layout_weight="125"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="left|center_vertical"
         >
        <ImageView
            android:id="@+id/iconCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/icon_cart"
            android:layout_marginTop="5dp"/>
       <View
           android:id="@+id/view"
           android:layout_width="40dp"
           android:layout_height="20dp"
           android:layout_marginBottom="20dp"></View>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/txtcomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/default_money_number"
            android:paddingLeft="35dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:layout_alignLeft="@+id/iconCart"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/main_settlement_layout"
        android:layout_width="0dp"
        android:layout_weight="95"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
         >

        <Button
            android:id="@+id/btn_go_settlement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/text_size_18"
            android:background="@drawable/btn_bg_for_red_selector"
            android:focusable="true"
            android:text="@string/main_settlement"
            android:textColor="@color/white" />



    </RelativeLayout>

</LinearLayout>
</LinearLayout>