<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/ivRecommendItem"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5sp"
            android:text="[天猫超市]明康汇巧克力蓝苺瑞士卷160g"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:id="@+id/tvRecommendItemName"/>

    <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_money_number"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:id="@+id/tvRecommendItemPrice"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15sp"
                android:text="@string/default_money_number"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:id="@+id/tvRecommendItemOriginalPrice"/>
    </LinearLayout>
</LinearLayout>